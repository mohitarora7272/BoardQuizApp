<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.board.quiz">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/splash_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppBaseThemeNew"
        tools:replace="android:theme">
        <activity
            android:name="com.board.quiz.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppBaseThemeSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.board.quiz.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppBaseThemeSplash"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.board.quiz.Category"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.board.quiz.HighestScore"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.board.quiz.TimerQuestions"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.board.quiz.Score"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.board.quiz.PrefsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/PreferencesTheme" />
        <activity
            android:name="com.board.quiz.ModeToActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.board.quiz.ResultActivity"
            android:label="@string/title_activity_result" />
        <activity
            android:name="com.board.quiz.ShopArea"
            android:label="@string/title_activity_shopp_area" />
        <activity
            android:name="com.board.quiz.Mode"
            android:label="@string/title_activity_mode" />
        <activity
            android:name="com.board.quiz.Statics"
            android:label="@string/title_activity_statics" />
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

    </application>

</manifest>